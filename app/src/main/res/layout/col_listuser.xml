<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ImgColListKos"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:scaleType="centerInside"
            android:src="@mipmap/ic_action_person" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_margin="@dimen/MarginLayout"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/TvColListKosNama"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Medium Text"
                    android:textSize="17dp"
                    android:textColor="@color/md_black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/TvColListKosAlamat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/md_black"
                    android:text="Small Text"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/TvColListKosStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/Green"
                    android:text="Small Text"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/TvColListKosHarga"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/Red"
                    android:text="Small Text"
                    android:textSize="13dp" />

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
