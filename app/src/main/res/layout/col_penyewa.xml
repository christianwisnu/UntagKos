<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_margin="@dimen/MarginLayout"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/TvColListPenyewaKosNama"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Medium Text"
                    android:textSize="17dp"
                    android:textColor="@color/md_black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/TvColListPenyewaKosTelp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Small Text"
                    android:textStyle="bold"
                    android:textSize="13dp"
                    android:layout_marginTop="5dp"/>

                <TextView
                    android:id="@+id/TvColListPenyewaKosTglMasuk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Small Text"
                    android:textStyle="bold"
                    android:textSize="13dp"
                    android:layout_marginTop="5dp"/>

                <TextView
                    android:id="@+id/TvColListPenyewaKosTglKeluar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Small Text"
                    android:textStyle="bold"
                    android:textSize="13dp"
                    android:layout_marginTop="5dp"/>

                <TextView
                    android:id="@+id/TvColListPenyewaKosStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Small Text"
                    android:textStyle="bold"
                    android:textSize="13dp"
                    android:layout_marginTop="5dp"/>
            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/MarginLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ImgColPenyewaKeluar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="end"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/slctcyclewhitecard"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_action_exit2" />

        <TextView
            android:id="@+id/TvColIdKosPenyewa"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/cardcyclewhite"
            android:gravity="center"
            android:text="10"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:visibility="invisible" />


    </LinearLayout>

</LinearLayout>
